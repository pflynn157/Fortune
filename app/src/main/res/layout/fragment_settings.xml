<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".SettingsFragment"
              android:orientation="vertical"
              android:id="@+id/settings_layout_root">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose notification time:" tools:text="@string/choose_time" android:textColor="#000000"
            android:textSize="18sp" android:padding="10dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:padding="10dp">

        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number" android:layout_marginRight="5dp" android:id="@+id/hour_entry"/>

        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                android:id="@+id/min_entry"/>

        <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="AM" android:layout_marginLeft="5dp" android:id="@+id/am_pm_entry"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:padding="10dp">

        <Button
                android:id="@+id/set_time_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Time" android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>